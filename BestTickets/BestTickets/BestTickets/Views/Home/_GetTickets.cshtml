@model IEnumerable<BestTickets.Models.Vehicle>
@{
    var averageTicketPrice = BestTickets.Models.TicketCollectionExtension.GetAverageTicketsPrice(Model);
}
        
@if (Model.Count() < 1)
{
    <p><h4 class="text-center ticketNotFoundColor">Билетов не найдено</h4></p>
}
else
{
    <div>
            <table class="table-responsive ticketsSchedule hidden-xs col-sm-12 col-md-offset-1 col-md-10 col-lg-offset-2 col-lg-8 ">
                <thead>
                    <tr>
                        <th>Номер транспорта</th>
                        <th class="hidden-xs hidden-sm">Тип</th>
                        <th>Маршрут</th>
                        <th>Время отправления</th>
                        <th>Время прибытия</th>
                        <th>Тип места/Количество свободных мест/Стоимость</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ticket in Model)
                    {
                    <tr>
                        <td>@ticket.Name</td>
                        <td class="hidden-xs hidden-sm">@ticket.Type</td>
                        <td>@ticket.Route</td>
                        <td>@ticket.DepartureTime</td>
                        <td>@ticket.ArrivalTime</td>
                        <td>
                            @foreach (var place in ticket.Places)
                            {
                                <p>
                                    <span class="placeType">@place.Type / </span>
                                    <span class="placeAmount">@place.Amount / </span>
                                    <span class="placeCost">
                                        @if (place.Cost <= averageTicketPrice)
                                        {
                                            <span class="label-success"><strong >@place.Cost</strong><span>руб.</span></span>
                                        }
                                        else
                                        {
                                            <span class="label-danger"><strong >@place.Cost</strong><span>руб.</span></span>
                                        }
                                    </span>
                                </p>
                            }
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            <div class="schedule ticketsSchedule visible-xs">
                @foreach(var ticket in Model)
                {
                <div class="col-xs-12 text-center routeLabel"><strong>@ticket.Name <span>Маршрут:</span> @ticket.Route</strong></div>
                <div class="col-xs-12 text-center">
                    <div>
                        <span>Тип:</span> @ticket.Type
                    </div>
                    <div>
                        <span>Отправление: </span>
                        @ticket.DepartureTime
                        <span>Прибытие: </span>
                        @ticket.ArrivalTime
                    </div>
                    <div>
                        <span>Свободные места:</span>
                        @foreach (var place in ticket.Places)
                        {
                            <p>
                                <span class="placeType">@place.Type / </span>
                                <span class="placeAmount">@place.Amount / </span>
                                <span class="placeCost">
                                    @if (place.Cost <= averageTicketPrice)
                                    {
                                        <span class="label-success"><strong>@place.Cost</strong><span>руб.</span></span>
                                    }
                                    else
                                    {
                                        <span class="label-danger"><strong >@place.Cost</strong><span>руб.</span></span>
                                    }
                                </span>
                            </p>
                        }
                    </div>
                </div>
                }
            </div>
    </div>
}

    