@model BestTickets.Models.RouteViewModel

@{
    ViewBag.Title = "Best Tickets";
}

<div class="jumbotron">
    <h1>Best tickets</h1>
     <h3>Выбор лучших билетов</h3>
</div>

<div class="row">

    @using (Ajax.BeginForm("GetTickets", new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "tickets", InsertionMode = InsertionMode.Replace }))
    {
            <div class="col-xs-offset-1 col-xs-10 col-sm-12">
                @Html.ValidationMessageFor(x => x.DeparturePlace, "", new { @class = "text-danger" })<br />
                @Html.ValidationMessageFor(x => x.ArrivalPlace, "", new { @class = "text-danger" })<br /><br />
            </div>

            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-inline col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
                <div class="form-group col-sm-3 ">
                    @Html.TextBoxFor(x => x.DeparturePlace, new { @class = "form-control", @placeholder = "Отправление" })
                </div>
                <div class="form-group  col-sm-3">
                    @Html.TextBoxFor(x => x.ArrivalPlace, new { @class = "form-control", @placeholder = "Прибытие" })
                </div>
                <div class="form-group col-sm-4">
                    <input type="date" class="form-control" name="Date" />
                </div>
                <div class="form-group col-sm-2">
                    <input class="btn btn-default form-control" type="submit" value="Поиск" />
                </div>
            </div>
    } 
</div>

<div id="tickets" class="row">
    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/ajax")
}